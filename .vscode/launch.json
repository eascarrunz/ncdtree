    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ncdtree",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/ncdtree",
            "env": {
                "CGO_CFLAGS": "-O1"
            },
            "args": ["-f", "${workspaceFolder}/data/whales.fasta", "--stats"]
        },
        {
            "name": "Launch phylocore tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pkg/phylocore/",
            "env": {
                "CGO_CFLAGS": "-O1"
            },
            // "args": ["test", "${workspaceFolder}/pkg/phylocore/"]
        }
    ]
}